<?xml version="1.0" encoding="utf-8" ?>

<commands namespace="a">

  <variable id="columns">
    Id,Age,Name
  </variable>

  <select id="list-dynamic">
    select ${columns} from student where id=@Id limit 0,1   
  </select>

  <insert id="adda">
    insert into student(name,age)values(@Name,@age)
  </insert>

</commands>